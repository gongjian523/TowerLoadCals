                </TreeView>

            </TabItem>
            <TabItem Header="SL_TA.DBF" Name="ReadTadbfTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="166*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="425*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dataGridSLTa" ItemsSource="{Binding}" AutoGenerateColumns="False" Grid.ColumnSpan="3">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="电压等级" Width="80" Binding="{Binding VoltageLevel}"/>
                            <DataGridTextColumn Header="杆塔型号" Width="80" Binding="{Binding TowerModel}"/>
                            <DataGridTextColumn Header="图号" Width="80" Binding="{Binding PicNum}"/>
                            <DataGridTextColumn Header="呼高" Width="80" Binding="{Binding Height}"/>
                            <DataGridTextColumn Header="直线1耐张2" Width="80" Binding="{Binding Line1Tension2}"/>
                            <DataGridTextColumn Header="最大转角" Width="80" Binding="{Binding AngleMax}"/>
                            <DataGridTextColumn Header="允许LH" Width="80" Binding="{Binding AllowedLH}"/>
                            <DataGridTextColumn Header="允许LV" Width="80" Binding="{Binding AllowedLV}"/>
                            <DataGridTextColumn Header="最大档距" Width="80" Binding="{Binding BreakingStressKGMM}"/>
                            <DataGridTextColumn Header="断拉力N" Width="80" Binding="{Binding DistanceMax}"/>
                            <DataGridTextColumn Header="允许摇摆角" Width="80" Binding="{Binding AllowSwingAngle}"/>
                            <DataGridTextColumn Header="内过摇摆角" Width="80" Binding="{Binding InsideSwingAngle}"/>
                            <DataGridTextColumn Header="外过摇摆角" Width="80" Binding="{Binding OutsideSwingAngle}"/>
                            <DataGridTextColumn Header="水平线间距" Width="80" Binding="{Binding HorizontalWireDsitance}"/>
                            <DataGridTextColumn Header="导地水平距" Width="80" Binding="{Binding EarthWireHorizontalDsitance}"/>
                            <DataGridTextColumn Header="地线支架高" Width="80" Binding="{Binding EarthWireCarrierHeight}"/>
                            <DataGridTextColumn Header="上下导线距" Width="80" Binding="{Binding UpDownWireDistance}"/>
                            <DataGridTextColumn Header="中下导线距" Width="80" Binding="{Binding MiddleDownWireDistance}"/>
                            <DataGridTextColumn Header="导平1垂2V3" Width="80" Binding="{Binding LineH1V2V3}"/>
                            <DataGridTextColumn Header="导平投影DP" Width="80" Binding="{Binding LineHProjectionDP}"/>
                            <DataGridTextColumn Header="导垂投影DZ" Width="80" Binding="{Binding LineVProjectionDZ}"/>
                            <DataGridTextColumn Header="正面根开米" Width="80" Binding="{Binding FrontDistanceM}"/>
                            <DataGridTextColumn Header="侧面根开米" Width="80" Binding="{Binding SideDistanceM}"/>
                            <DataGridTextColumn Header="钢重量KG" Width="80" Binding="{Binding SteelWeightKG}"/>
                            <DataGridTextColumn Header="A3F重量KG" Width="80" Binding="{Binding A3FWeightKG}"/>
                            <DataGridTextColumn Header="MN重量KG" Width="80" Binding="{Binding MNWeightKG}"/>
                            <DataGridTextColumn Header="水泥重量KG" Width="80" Binding="{Binding CementWeightKG}"/>
                            <DataGridTextColumn Header="本体造价" Width="80" Binding="{Binding BodyPrice}"/>
                            <DataGridTextColumn Header="角影响LH" Width="80" Binding="{Binding AngelEffectLH}"/>
                            <DataGridTextColumn Header="最小LH" Width="80" Binding="{Binding LHMin}"/>
                            <DataGridTextColumn Header="塔KV值" Width="80" Binding="{Binding TowerKV}"/>
                            <DataGridTextColumn Header="截距" Width="80" Binding="{Binding Intercept}"/>
                            <DataGridTextColumn Header="斜率" Width="80" Binding="{Binding Slope}"/>
                            <DataGridTextColumn Header="截距增长值" Width="80" Binding="{Binding InterceptGrowthRate}"/>
                            <DataGridTextColumn Header="斜率增长值" Width="80" Binding="{Binding SlopeGrowthRate}"/>
                            <DataGridTextColumn Header="塔挂串个数" Width="80" Binding="{Binding TowerHangStringNum}"/>
                            <DataGridTextColumn Header="串总个数" Width="80" Binding="{Binding TotalStringNum}"/>
                            <DataGridTextColumn Header="V串YN" Width="80" Binding="{Binding VStringYN}"/>
                            <DataGridTextColumn Header="杆塔种类" Width="80" Binding="{Binding TowerType}"/>
                            <DataGridTextColumn Header="基正面根开" Width="80" Binding="{Binding BaseFrontDistance}"/>
                            <DataGridTextColumn Header="基侧面根开" Width="80" Binding="{Binding BaseSideDistance}"/>
                            <DataGridTextColumn Header="基对角线长" Width="80" Binding="{Binding BaseDiagonal}"/>
                            <DataGridTextColumn Header="预偏距离S1" Width="80" Binding="{Binding ExpectedDeviatingDistance}"/>
                            <DataGridTextColumn Header="横担宽度" Width="80" Binding="{Binding SidelineWidth}"/>
                            <DataGridTextColumn Header="是否紧凑塔" Width="80" Binding="{Binding IsTightTower}"/>
                            <DataGridTextColumn Header="V串夹角" Width="80" Binding="{Binding VStringAngle}"/>
                            <DataGridTextColumn Header="埋深" Width="80" Binding="{Binding BuriedDeepth}"/>
                            <DataGridTextColumn Header="裕度" Width="80" Binding="{Binding Margin}"/>
                            <DataGridTextColumn Header="地栓型号" Width="80" Binding="{Binding GroundBoltModel}"/>
                            <DataGridTextColumn Header="挂点ABC" Width="80" Binding="{Binding HungPointABC}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="SL_XIAN.DBF" Name="ReadXiandbfTab">
                <DataGrid  x:Name="dataGridXian" ItemsSource="{Binding}" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto"  AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="电线型号" Width="80" Binding="{Binding WireType}"/>
                        <DataGridTextColumn Header="截面MM2" Width="80" Binding="{Binding SectionMM2}"/>
                        <DataGridTextColumn Header="外径MM" Width="80" Binding="{Binding OuterDiameterMM}"/>
                        <DataGridTextColumn Header="重量KG每KM" Width="80" Binding="{Binding WeightKG}"/>
                        <DataGridTextColumn Header="弹性系数KG" Width="80" Binding="{Binding ElasticityCoefficientKG}"/>
                        <DataGridTextColumn Header="弹性系数N" Width="80" Binding="{Binding ElasticityCoefficientN}"/>
                        <DataGridTextColumn Header="线膨胀系数" Width="80" Binding="{Binding LinearExpansionCoefficient}"/>
                        <DataGridTextColumn Header="断应力KGMM" Width="80" Binding="{Binding BreakingStressKGMM}"/>
                        <DataGridTextColumn Header="断拉力N" Width="80" Binding="{Binding BreakingForceN}"/>
                        <DataGridTextColumn Header="导线1地线2" Width="80" Binding="{Binding Wire1EarthWire2}"/>
                        <DataGridTextColumn Header="标称截面" Width="80" Binding="{Binding NominalCrossSection}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Weather">
                <TreeView Name="weatherTreeView" />
            </TabItem>
            <TabItem Header="ta文件">
                <DataGrid  x:Name="dataGridTa" ItemsSource="{Binding}" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto"  AutoGenerateColumns="False" SelectionMode="Extended" SelectionUnit="Cell">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="复制" Click="button_DG_Copy_Click"/>
                            <MenuItem Header="剪切" Click="button_DG_Cut_Click"/>
                            <MenuItem Header="粘贴" Click="button_DG_Paste_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="序号" Width="80" Binding="{Binding Index}"/>
                        <DataGridTextColumn Header="塔位号" Width="80" Binding="{Binding Num}"/>
                        <DataGridTextColumn Header="塔位点" Width="80" Binding="{Binding Pos}"/>
                        <DataGridTextColumn Header="塔型" Width="80" Binding="{Binding Model}"/>
                        <DataGridTextColumn Header="塔位高程" Width="80" Binding="{Binding Elevation}"/>
                        <DataGridTextColumn Header="定位高差" Width="80" Binding="{Binding SubOfElv}"/>
                        <DataGridTextColumn Header="前侧档距" Width="80" Binding="{Binding FrontSpan}"/>
                        <DataGridTextColumn Header="水平档距" Width="80" Binding="{Binding HorizontalSpan}"/>
                        <DataGridTextColumn Header="垂直档距" Width="80" Binding="{Binding VerticalSpan}"/>
                        <DataGridTextColumn Header="WireK" Width="80" Binding="{Binding WireK}"/>
                        <DataGridTextColumn Header="中间部分" Width="80" Binding="{Binding sec}"/>
                        <DataGridTextColumn Header="前侧垂直档距" Width="80" Binding="{Binding FrontVerticalSpan}"/>
                        <DataGridTextColumn Header="后侧垂直档距" Width="80" Binding="{Binding BackVerticalSpan}"/>
                        <DataGridTextColumn Header="转角" Width="80" Binding="{Binding AngelofApplication}"/>
                        <DataGridTextColumn Header="后侧/前侧设计气象条件" Width="80" Binding="{Binding WeatherID}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="塔库文件">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Name="nameLabel" HorizontalAlignment="Left"/>
                    <Label Name="wireLabel" Grid.Row="1"  HorizontalAlignment="Left"/>
                    <Label Name="wdLabel" Grid.Row="2"   HorizontalAlignment="Left"/>
                    <DataGrid  Name="wdComboGridTa"  Grid.Row="3"  ItemsSource="{Binding}" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto"  AutoGenerateColumns="False" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
